<table class="line_items" >
  <colgroup>
    <col/>
    <col/>
  </colgroup>
  <tr>
    <td class="desc bold"><%= I18n.t(:item_description) %></td>
    <td class="qty bold"><%= t(:qty) %> </td>
  </tr>
  <% @suppliers = Array.new %>
  <% @order.line_items.each do |item| %>
    <tr>
      <td class="cell">
        <%= item.variant.product.fullname rescue item.variant.product.name %>
        <%= " #{item.variant.options_text}" %>
      </td>
      <td class="cell qty"><%=item.quantity %></td>
    </tr>
    <% supplier_name = item.variant.product.supplier.name
    if "Locally" != supplier_name
      @suppliers << supplier_name
    end%>
  <% end %>
</table>
